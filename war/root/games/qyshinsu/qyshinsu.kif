	(plusplus ?x ?y))
	
(<= (diff ?x ?y 1)
	(plusplus ?y ?x))
	
(<= (diff ?x ?y 2)
	(plus2 ?x ?y))
	
(<= (diff ?x ?y 2)
	(plus2 ?y ?x))

(<= (diff ?x ?y 3)
	(plus3 ?x ?y))
	
(<= (diff ?x ?y 3)
	(plus3 ?y ?x))
	
(<= (diff ?x ?y 4)
	(plus4 ?x ?y))
	
(<= (diff ?x ?y 4)
	(plus4 ?y ?x))
	
(<= (diff ?x ?y 5)
	(plus5 ?x ?y))
	
(<= (diff ?x ?y 5)
	(plus5 ?y ?x))
	
(<= (diff ?x ?y 6)
	(plus6 ?x ?y))
	
(<= (diff ?x ?y 6)
	(plus6 ?y ?x))

(<= (plus6 ?x ?y)
	(plus5 ?x ?c)
	(plusplus ?c ?y))

(<= (plus5 ?x ?y)
	(plus4 ?x ?c)
	(plusplus ?c ?y))

(<= (plus4 ?x ?y)
	(plus3 ?x ?c)
	(plusplus ?c ?y))

(<= (plus3 ?x ?y)
	(plus2 ?x ?c)
	(plusplus ?c ?y))

(<= (plus2 ?x ?y)
	(plusplus ?x ?c)
	(plusplus ?c ?y))
    
