;;; GOAL Relations
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (goal red 100)
    redWin)
(<= (goal red 0)
    (not redWin))
    
(<= (goal black 100)
    blackWin)
(<= (goal black 0)
	(not blackWin))
		
