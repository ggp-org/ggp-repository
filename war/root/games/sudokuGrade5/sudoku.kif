;;; Sudoku
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Components
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

  (role robot)


  (<= (base (cell ?i ?j ?k ?l ?r))
      (index ?i)
      (index ?j)
      (index ?k)
      (index ?l)
      (filler ?r))


  (<= (input robot (mark ?i ?j ?k ?l ?r))
      (index ?i)
      (index ?j)
      (index ?k)
      (index ?l)
      (digit ?r))

