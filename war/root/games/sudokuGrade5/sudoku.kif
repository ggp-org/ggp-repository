;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; legal
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

  (<= (legal robot (mark ?i ?j ?k ?l ?x))
      (true (cell ?i ?j ?k ?l b))
      (digit ?x)
      (not (row ?k ?l ?x))
      (not (col ?i ?j ?x))
      (not (square ?i ?k ?x)))

  (<= (row ?k ?l ?x) (true (cell 1 1 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 1 2 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 1 3 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 2 1 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 2 2 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 2 3 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 3 1 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 3 2 ?k ?l ?x)))
  (<= (row ?k ?l ?x) (true (cell 3 3 ?k ?l ?x)))

  (<= (col ?i ?j ?x) (true (cell ?i ?j 1 1 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 1 2 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 1 3 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 2 1 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 2 2 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 2 3 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 3 1 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 3 2 ?x)))
  (<= (col ?i ?j ?x) (true (cell ?i ?j 3 3 ?x)))

  (<= (square ?i ?k ?x) (true (cell ?i 1 ?k 1 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 1 ?k 2 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 1 ?k 3 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 2 ?k 1 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 2 ?k 2 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 2 ?k 3 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 3 ?k 1 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 3 ?k 2 ?x)))
  (<= (square ?i ?k ?x) (true (cell ?i 3 ?k 3 ?x)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; next
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

  (<= (next (cell ?i ?j ?k ?l ?x))
      (does ?role (mark ?i ?j ?k ?l ?x)))

  (<= (next (cell ?i ?j ?k ?l ?x))
      (true (cell ?i ?j ?k ?l ?x))
      (does ?role (mark ?s ?t ?u ?v ?y))
      (distinct ?s ?i))

  (<= (next (cell ?i ?j ?k ?l ?x))
      (true (cell ?i ?j ?k ?l ?x))
      (does ?role (mark ?s ?t ?u ?v ?y))
      (distinct ?t ?j))

  (<= (next (cell ?i ?j ?k ?l ?x))
      (true (cell ?i ?j ?k ?l ?x))
      (does ?role (mark ?s ?t ?u ?v ?y))
      (distinct ?u ?k))

  (<= (next (cell ?i ?j ?k ?l ?x))
      (true (cell ?i ?j ?k ?l ?x))
      (does ?role (mark ?s ?t ?u ?v ?y))
      (distinct ?v ?l))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; goal
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

  (<= (goal robot 100) (not open))
  (<= (goal robot 0) open)

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; terminal
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

  (<= terminal (not playable))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Views
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

  (<= (filler ?x) (digit ?x))
  (filler b)

  (<= open (true (cell ?i ?j ?k ?l b)))

  (<= playable (legal robot (mark ?i ?j ?k ?l ?x)))

