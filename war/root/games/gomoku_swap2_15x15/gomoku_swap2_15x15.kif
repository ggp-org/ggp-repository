    (true (cell ?x ?y4 ?color))
    (succ ?y4 ?y5)
    (true (cell ?x ?y5 ?color))
    (succ ?y5 ?y6)
    (not (true (cell ?x ?y6 ?color))))
; Diagonal line of exactly five
(<= (hasLine ?color)
    (true (cell ?x1 ?y1 ?color))
    (succ ?x0 ?x1)
    (succ ?y0 ?y1)
    (not (true (cell ?x0 ?y0 ?color)))
    (succ ?x1 ?x2)
    (succ ?y1 ?y2)
    (true (cell ?x2 ?y2 ?color))
