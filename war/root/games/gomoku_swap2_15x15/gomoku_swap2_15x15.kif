    (not (true (cell ?x6 ?y ?color))))
; Vertical line of exactly five
(<= (hasLine ?color)
    (true (cell ?x ?y1 ?color))
    (succ ?y0 ?y1)
    (not (true (cell ?x ?y0 ?color)))
    (succ ?y1 ?y2)
    (true (cell ?x ?y2 ?color))
    (succ ?y2 ?y3)
    (true (cell ?x ?y3 ?color))
