(legal player (play 3))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; NEXT Relations
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (next (block 1 30))
    (does dropper (place 1)))
(<= (next (block 2 30))
    (does dropper (place 2)))
(<= (next (block 3 30))
    (does dropper (place 3)))
    
(<= (next (blocksDropped ?nplusplus))
    blockDropped
    (true (blocksDropped ?n))
    (plusplus ?n ?nplusplus))
(<= (next (blocksDropped ?n))
    (true (blocksDropped ?n))
    (not blockDropped))
    
(<= (next (blocksCaught ?nplusplus))    
	blockCaught
    (true (blocksCaught ?n))
    (plusplus ?n ?nplusplus))
(<= (next (blocksCaught ?n))
    (true (blocksCaught ?n))
    (not blockCaught))
    
(<= (next (block ?x ?yminusminus))
    (true (block ?x ?y))
    (minusminus ?y ?yminusminus))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; TERMINAL Relations
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= terminal
    (true (blocksDropped 30))
    (not (true (block 1 1)))
    (not (true (block 2 1)))
    (not (true (block 3 1))))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; GOAL Relations
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(goal dropper 100)
(<= (goal player ?goal)
    (true (blocksCaught ?n))
    (scoreMap ?n ?goal))

