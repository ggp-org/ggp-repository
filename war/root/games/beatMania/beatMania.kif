;;; LEGAL Relations
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (legal dropper (place 1))
    (not (true (blocksDropped 30))))
(<= (legal dropper (place 2))
    (not (true (blocksDropped 30))))
(<= (legal dropper (place 3))
    (not (true (blocksDropped 30))))
(<= (legal dropper noop)
    (true (blocksDropped 30)))

(legal player (play 1))
